source 'https://github.com/cocoapods/specs.git'

platform :ios, '8.1'

xcodeproj 'Bequest'

link_with 'Bequest'

# UI
pod 'SSDataSources', '0.7.3'

# Networking
pod 'Alamofire', :git => "https://github.com/mrackwitz/Alamofire.git", :branch => "podspec"

# Ensure all pods maintain an iOS 7 deployment target
post_install do |installer_representation|
    installer_representation.project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '7.0'
        end
    end
end

# Tests
target :BequestTests, :exclusive => true do
	pod 'Expecta'
end
